{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets": ["./src/assets/*"],
      "@components": ["./src/components/*"],
      "@constants": ["./src/constants/*"],
      "@helpers": ["./src/helpers/*"],
      "@hooks": ["./src/hooks/*"],
      "@layout": ["./src/layout/*"],
      "@service": ["./src/service/*"],
      "@styles": ["./src/styles/*"],
      "@types": ["./src/types/*"],
      "@views": ["./src/views/*"],
      "@api": ["./src/api/*"]
    }
  },

  "include": [
    "vite.config.ts",
    "./src/**/*.ts",
    "./src/**/*.css",
    "./src/**/*.tsx",
    "custom.d.ts"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
